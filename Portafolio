        // ========== INICIALIZACI√ìN ==========
        document.addEventListener('DOMContentLoaded', function() {
            console.log('DOM Content Loaded - Iniciando portafolio');
            
            try {
                // Cargar datos del CV
                loadCVData();
                console.log('CV data loaded');
                
                // Cargar proyectos
                loadProjects();
                console.log('Projects loaded');
                
                // Cargar herramientas
                loadTools();
                console.log('Tools loaded');
                
                // Configurar eventos
                setupEventListeners();
                console.log('Event listeners set up');
                
                // Configurar NeuroBot
                initNeuroBot();
                console.log('NeuroBot initialized');
                
                // Mensaje inicial del NeuroBot
                setTimeout(() => {
                    addBotMessage("¬°Hola! Soy NeuroBot, tu asistente para explorar este portafolio. Puedo responder preguntas sobre mi experiencia, proyectos, herramientas o proceso de dise√±o. ¬øEn qu√© te puedo ayudar?");
                }, 1000);
                
            } catch (error) {
                console.error('Error durante la inicializaci√≥n:', error);
            }
        });

        // ========== CARGA DE DATOS DEL CV ==========
        function loadCVData() {
            try {
                // Cargar timeline de experiencias
                const timeline = document.getElementById('experienceTimeline');
                if (timeline) {
                    cvData.experiences.forEach(exp => {
                        const timelineItem = document.createElement('div');
                        timelineItem.className = 'timeline-item';
                        timelineItem.setAttribute('data-type', exp.type.join(' '));
                        
                        timelineItem.innerHTML = `
                            <div class="timeline-dot"></div>
                            <div class="timeline-date">${exp.period} ‚Ä¢ ${exp.location}</div>
                            <h3 class="timeline-title">${exp.position}</h3>
                            <div class="timeline-company">${exp.icon} ${exp.company}</div>
                            <p class="timeline-description">${exp.description}</p>
                            <div class="timeline-tags">
                                ${exp.metrics.map(metric => 
                                    `<span class="timeline-tag">${metric}</span>`
                                ).join('')}
                                ${exp.type.map(type => 
                                    `<span class="timeline-type-tag">${type.toUpperCase()}</span>`
                                ).join('')}
                            </div>
                        `;
                        
                        // A√±adir detalles si existen
                        if (exp.details && exp.details.length > 0) {
                            const detailsList = exp.details.map(detail => 
                                `<li>${detail}</li>`
                            ).join('');
                            
                            const detailsDiv = document.createElement('div');
                            detailsDiv.className = 'timeline-details';
                            detailsDiv.innerHTML = `<ul>${detailsList}</ul>`;
                            
                            timelineItem.appendChild(detailsDiv);
                        }
                        
                        timeline.appendChild(timelineItem);
                    });
                }
                
                // Cargar habilidades
                const skillsGrid = document.getElementById('skillsGrid');
                if (skillsGrid) {
                    const skillCategories = [
                        { title: "Dise√±o y UX/UI", skills: cvData.skills.design },
                        { title: "Herramientas", skills: cvData.skills.tools },
                        { title: "Metodolog√≠as", skills: cvData.skills.methodologies },
                        { title: "Negocios y Estrategia", skills: cvData.skills.business },
                        { title: "Inteligencia Artificial", skills: cvData.skills.ai }
                    ];
                    
                    skillCategories.forEach(category => {
                        const categoryDiv = document.createElement('div');
                        categoryDiv.className = 'skill-category';
                        
                        categoryDiv.innerHTML = `
                            <h4>${category.title}</h4>
                            <div class="skill-list">
                                ${category.skills.map(skill => 
                                    `<span class="skill-tag">${skill}</span>`
                                ).join('')}
                            </div>
                        `;
                        
                        skillsGrid.appendChild(categoryDiv);
                    });
                }
                
                // Inicializar filtros
                filterCV('all');
                
            } catch (error) {
                console.error('Error en loadCVData:', error);
            }
        }
        
        function filterCV(filter) {
            try {
                const items = document.querySelectorAll('.timeline-item');
                
                items.forEach(item => {
                    const types = item.getAttribute('data-type') || '';
                    
                    if (filter === 'all' || types.includes(filter)) {
                        item.style.display = 'block';
                        setTimeout(() => {
                            item.style.opacity = '1';
                            item.style.transform = 'translateX(0)';
                        }, 10);
                    } else {
                        item.style.opacity = '0';
                        item.style.transform = 'translateX(-20px)';
                        setTimeout(() => {
                            item.style.display = 'none';
                        }, 300);
                    }
                });
            } catch (error) {
                console.error('Error en filterCV:', error);
            }
        }
        
        // ========== CARGA DE PROYECTOS ==========
        function loadProjects() {
            try {
                const projectsGrid = document.getElementById('projectsGrid');
                if (!projectsGrid) return;
                
                cvData.projects.forEach(project => {
                    const projectCard = document.createElement('div');
                    projectCard.className = 'project-card';
                    
                    projectCard.innerHTML = `
                        <div class="project-header">
                            <div class="project-title">${project.title}</div>
                            <div class="project-company">${project.company}</div>
                        </div>
                        <div class="project-content">
                            <p class="project-description">${project.description}</p>
                            <div class="project-metrics">
                                ${project.metrics.map(metric => 
                                    `<div class="metric">${metric}</div>`
                                ).join('')}
                            </div>
                            <div class="project-results">
                                ${project.results.map(result => 
                                    `<div class="result-item">
                                        <i class="fas fa-check-circle"></i>
                                        <span>${result}</span>
                                    </div>`
                                ).join('')}
                            </div>
                            <div class="project-tools">
                                ${project.tools.map(tool => 
                                    `<span class="tool-tag">${tool}</span>`
                                ).join('')}
                                <span class="tool-tag" style="background: var(--primary-blue); color: white;">${project.type.toUpperCase()}</span>
                            </div>
                            <button class="contact-cta view-project-btn" data-project-id="${project.id}" style="margin-top: 1.5rem; width: 100%;">
                                <i class="fas fa-eye"></i>
                                <span>Ver Detalles del Proyecto</span>
                            </button>
                        </div>
                    `;
                    
                    projectsGrid.appendChild(projectCard);
                });
                
                // A√±adir event listeners a los botones de proyectos
                document.querySelectorAll('.view-project-btn').forEach(btn => {
                    btn.addEventListener('click', function() {
                        const projectId = this.getAttribute('data-project-id');
                        viewProjectDetails(parseInt(projectId));
                    });
                });
                
            } catch (error) {
                console.error('Error en loadProjects:', error);
            }
        }
        
        // ========== CARGA DE HERRAMIENTAS ==========
        function loadTools() {
            try {
                const toolsGrid = document.getElementById('toolsGrid');
                if (!toolsGrid) return;
                
                Object.entries(cvData.tools).forEach(([category, tools]) => {
                    const toolCategory = document.createElement('div');
                    toolCategory.className = 'tool-category';
                    
                    const categoryNames = {
                        'design': 'Dise√±o',
                        'prototyping': 'Prototipado',
                        'research': 'Investigaci√≥n',
                        'collaboration': 'Colaboraci√≥n',
                        'ai': 'Inteligencia Artificial',
                        'development': 'Desarrollo'
                    };
                    
                    const categoryIcons = {
                        'design': 'paint-brush',
                        'prototyping': 'bolt',
                        'research': 'search',
                        'collaboration': 'users',
                        'ai': 'robot',
                        'development': 'code'
                    };
                    
                    toolCategory.innerHTML = `
                        <h3><i class="fas fa-${categoryIcons[category] || 'toolbox'}"></i> ${categoryNames[category] || category}</h3>
                        <div class="tool-list">
                            ${tools.map(tool => `
                                <div class="tool-item">
                                    <span class="tool-icon">${tool.icon}</span>
                                    <div class="tool-info">
                                        <div class="tool-name">${tool.name}</div>
                                        <div class="tool-level">${tool.level} ‚Ä¢ ${tool.years} a√±os</div>
                                    </div>
                                </div>
                            `).join('')}
                        </div>
                    `;
                    
                    toolsGrid.appendChild(toolCategory);
                });
                
            } catch (error) {
                console.error('Error en loadTools:', error);
            }
        }
        
        // ========== NEUROBOT ==========
        function initNeuroBot() {
            try {
                // Mostrar preguntas r√°pidas
                showQuickQuestions();
                
                // Configurar toggle del NeuroBot
                const toggle = document.getElementById('neurobotToggle');
                const container = document.getElementById('neurobotContainer');
                
                if (toggle && container) {
                    toggle.addEventListener('click', () => {
                        container.classList.toggle('active');
                    });
                }
                
            } catch (error) {
                console.error('Error en initNeuroBot:', error);
            }
        }
        
        function showQuickQuestions() {
            try {
                const container = document.getElementById('quickQuestions');
                if (!container) return;
                
                const questions = [
                    "¬øCu√°l es tu proceso de dise√±o?",
                    "¬øQu√© herramientas usas?",
                    "Experiencia en B2B",
                    "Proyectos de healthcare",
                    "Habilidades de liderazgo",
                    "¬øC√≥mo contactarte?"
                ];
                
                questions.forEach(q => {
                    const btn = document.createElement('button');
                    btn.className = 'quick-question';
                    btn.textContent = q;
                    btn.addEventListener('click', () => {
                        document.getElementById('neurobotInput').value = q;
                        sendNeuroBotMessage();
                    });
                    container.appendChild(btn);
                });
                
            } catch (error) {
                console.error('Error en showQuickQuestions:', error);
            }
        }
        
        function sendNeuroBotMessage() {
            try {
                const input = document.getElementById('neurobotInput');
                const message = input.value.trim();
                
                if (!message) return;
                
                // A√±adir mensaje del usuario
                addUserMessage(message);
                
                // Clear input
                input.value = '';
                
                // Bot response
                setTimeout(() => {
                    const response = getNeuroBotResponse(message);
                    addBotMessage(response);
                }, 500);
                
            } catch (error) {
                console.error('Error en sendNeuroBotMessage:', error);
            }
        }
        
        function getNeuroBotResponse(query) {
            const lowerQuery = query.toLowerCase();
            
            const knowledge = {
                'proceso de dise√±o': 'Mi proceso: 1) Research (entrevistas, benchmark), 2) Ideaci√≥n (workshops, sketching), 3) Prototipado (Figma, testing), 4) Implementaci√≥n (design systems, handoff), 5) Medici√≥n (analytics, iteraci√≥n). Uso Design Thinking y metodolog√≠as √°giles.',
                'herramientas': 'Mis herramientas principales son Figma (experto), Adobe Creative Suite (10 a√±os), Maze para testing, Hotjar para analytics, Jira para gesti√≥n, y ChatGPT para IA. Tambi√©n domino herramientas no-code como Webflow.',
                'experiencia b2b': 'Tengo 3+ a√±os en B2B: Dexio (plataformas corporativas), ABA Tech (software m√©dico), Bavaria (sistemas internos). Especializado en flujos complejos, compliance y escalabilidad.',
                'healthcare': 'En ABA Tech dise√±√© software m√©dico con focus en accesibilidad y compliance HIPAA. Realic√© research con profesionales de salud y testing de usabilidad exhaustivo.',
                'liderazgo': 'He liderado equipos en Dexio (Product Design Director) y Bavaria (UX/UI Lead). Mi enfoque es mentoring, design systems compartidos y colaboraci√≥n cross-functional con devs y PMs.',
                'contacto': 'Email: sebastian689@gmail.com | WhatsApp: +57 319 411 6820 | LinkedIn: linkedin.com/in/masmela | Puedes agendar una llamada de 15 min gratis.',
                'portfolio': 'Puedes ver proyectos detallados en mi Behance: behance.net/masmela o solicitar casos de estudio completos por email.',
                'educaci√≥n': 'Soy Dise√±ador Gr√°fico Profesional de la Escuela de Artes y Letras, con √©nfasis en gesti√≥n. Certificaciones en UX (Carlos Slim), Scrum, y Adobe Expert.',
                'default': 'Puedo ayudarte con: mi experiencia, proceso de dise√±o, herramientas, casos de estudio, educaci√≥n, o c√≥mo contactarme. ¬øQu√© te gustar√≠a saber espec√≠ficamente?'
            };
            
            // Buscar coincidencias
            for (const [key, response] of Object.entries(knowledge)) {
                if (lowerQuery.includes(key.toLowerCase())) {
                    return response;
                }
            }
            
            // Respuesta por defecto
            return knowledge['default'];
        }
        
        function addUserMessage(text) {
            try {
                const container = document.getElementById('chatContainer');
                const messageDiv = document.createElement('div');
                messageDiv.className = 'message user-message';
                messageDiv.innerHTML = `
                    <div class="message-content">${text}</div>
                    <div class="message-time">${new Date().toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'})}</div>
                `;
                container.appendChild(messageDiv);
                container.scrollTop = container.scrollHeight;
                
            } catch (error) {
                console.error('Error en addUserMessage:', error);
            }
        }
        
        function addBotMessage(text) {
            try {
                const container = document.getElementById('chatContainer');
                const messageDiv = document.createElement('div');
                messageDiv.className = 'message bot-message';
                
                // Reemplazar saltos de l√≠nea con <br>
                const formattedText = text.replace(/\n/g, '<br>');
                
                messageDiv.innerHTML = `
                    <div class="message-content">${formattedText}</div>
                    <div class="message-time">${new Date().toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'})}</div>
                `;
                container.appendChild(messageDiv);
                container.scrollTop = container.scrollHeight;
                
            } catch (error) {
                console.error('Error en addBotMessage:', error);
            }
        }
        
        // ========== UTILIDADES ==========
        function setupEventListeners() {
            try {
                // Men√∫ mobile
                const menuToggle = document.getElementById('menuToggle');
                if (menuToggle) {
                    menuToggle.addEventListener('click', () => {
                        const nav = document.getElementById('neuroNav');
                        if (nav) {
                            nav.classList.toggle('active');
                        }
                    });
                }
                
                // Filtros CV
                document.querySelectorAll('.filter-btn').forEach(btn => {
                    btn.addEventListener('click', function() {
                        const filter = this.getAttribute('data-filter');
                        filterCV(filter);
                        
                        // Actualizar estado activo
                        document.querySelectorAll('.filter-btn').forEach(b => {
                            b.classList.remove('active');
                        });
                        this.classList.add('active');
                    });
                });
                
                // Bot√≥n de descarga de CV
                const downloadBtn = document.getElementById('downloadCVBtn');
                if (downloadBtn) {
                    downloadBtn.addEventListener('click', downloadCV);
                }
                
                // Bot√≥n de volver arriba
                const backToTopBtn = document.getElementById('backToTopBtn');
                if (backToTopBtn) {
                    backToTopBtn.addEventListener('click', scrollToTop);
                }
                
                // Botones de contacto
                const whatsappBtn = document.getElementById('whatsappBtn');
                if (whatsappBtn) {
                    whatsappBtn.addEventListener('click', () => {
                        window.open('https://wa.me/573194116820', '_blank');
                    });
                }
                
                const emailBtn = document.getElementById('emailBtn');
                if (emailBtn) {
                    emailBtn.addEventListener('click', () => {
                        window.location.href = 'mailto:sebastian689@gmail.com';
                    });
                }
                
                const linkedinBtn = document.getElementById('linkedinBtn');
                if (linkedinBtn) {
                    linkedinBtn.addEventListener('click', () => {
                        window.open('https://www.linkedin.com/in/masmela', '_blank');
                    });
                }
                
                const calendlyBtn = document.getElementById('calendlyBtn');
                if (calendlyBtn) {
                    calendlyBtn.addEventListener('click', openCalendly);
                }
                
                // NeuroBot input
                const neurobotInput = document.getElementById('neurobotInput');
                const neurobotSendBtn = document.getElementById('neurobotSendBtn');
                
                if (neurobotInput && neurobotSendBtn) {
                    neurobotInput.addEventListener('keypress', (e) => {
                        if (e.key === 'Enter') {
                            sendNeuroBotMessage();
                        }
                    });
                    
                    neurobotSendBtn.addEventListener('click', sendNeuroBotMessage);
                }
                
                // Cerrar men√∫ al hacer clic fuera
                document.addEventListener('click', (e) => {
                    const nav = document.getElementById('neuroNav');
                    const menuToggle = document.getElementById('menuToggle');
                    
                    if (nav && nav.classList.contains('active') && 
                        !nav.contains(e.target) && 
                        !menuToggle.contains(e.target)) {
                        nav.classList.remove('active');
                    }
                });
                
            } catch (error) {
                console.error('Error en setupEventListeners:', error);
            }
        }
        
        function scrollToTop() {
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }
        
        function downloadCV() {
            try {
                const btn = document.getElementById('downloadCVBtn');
                const originalText = btn.innerHTML;
                
                btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i><span> Generando CV...</span>';
                btn.disabled = true;
                
                setTimeout(() => {
                    btn.innerHTML = '<i class="fas fa-check"></i><span> CV Descargado</span>';
                    
                    setTimeout(() => {
                        btn.innerHTML = originalText;
                        btn.disabled = false;
                    }, 2000);
                    
                    // En una implementaci√≥n real, aqu√≠ se descargar√≠a el PDF
                    alert('CV descargado. En una implementaci√≥n completa, se descargar√≠a un PDF con toda la informaci√≥n.');
                    
                }, 1500);
                
            } catch (error) {
                console.error('Error en downloadCV:', error);
            }
        }
        
        function openCalendly() {
            window.open('https://calendly.com/sebastianmasmela/15min', '_blank');
        }
        
        function viewProjectDetails(projectId) {
            try {
                const project = cvData.projects.find(p => p.id === projectId);
                if (!project) return;
                
                const modal = document.createElement('div');
                modal.style.cssText = `
                    position: fixed;
                    top: 0;
                    left: 0;
                    width: 100%;
                    height: 100%;
                    background: rgba(0,0,0,0.8);
                    display: flex;
                    justify-content: center;
                    align-items: center;
                    z-index: 2000;
                    backdrop-filter: blur(10px);
                    padding: 1rem;
                `;
                
                modal.innerHTML = `
                    <div style="background: white; padding: 2rem; border-radius: 20px; max-width: 700px; width: 100%; border: 2px solid var(--primary-blue); position: relative; max-height: 90vh; overflow-y: auto;">
                        <button id="closeModalBtn" style="position: absolute; top: 1rem; right: 1rem; background: none; border: none; color: var(--dark-text); font-size: 1.5rem; cursor: pointer; width: 40px; height: 40px; border-radius: 50%; display: flex; align-items: center; justify-content: center; background: var(--light-bg);">√ó</button>
                        <h2 style="color: var(--primary-blue); margin-bottom: 1rem; padding-right: 2rem;">${project.title}</h2>
                        <p style="color: var(--primary-purple); margin-bottom: 1.5rem; font-weight: 600;">${project.company}</p>
                        <p style="margin-bottom: 1.5rem; color: var(--dark-text); line-height: 1.6;">${project.description}</p>
                        
                        <h3 style="color: var(--accent-green); margin-bottom: 1rem; border-bottom: 2px solid var(--light-gray); padding-bottom: 0.5rem;">M√©tricas y Resultados</h3>
                        <div style="display: flex; flex-wrap: wrap; gap: 1rem; margin-bottom: 1.5rem;">
                            ${project.metrics.map(metric => 
                                `<span style="padding: 0.5rem 1rem; background: var(--light-bg); border-radius: 10px; color: var(--dark-text); font-weight: 500;">${metric}</span>`
                            ).join('')}
                        </div>
                        
                        <h3 style="color: var(--accent-green); margin-bottom: 1rem; border-bottom: 2px solid var(--light-gray); padding-bottom: 0.5rem;">Logros Principales</h3>
                        <div style="margin-bottom: 1.5rem;">
                            ${project.results.map(result => 
                                `<div style="display: flex; align-items: flex-start; gap: 0.5rem; margin-bottom: 0.8rem;">
                                    <i class="fas fa-check-circle" style="color: var(--accent-green); margin-top: 0.2rem;"></i>
                                    <span>${result}</span>
                                </div>`
                            ).join('')}
                        </div>
                        
                        <h3 style="color: var(--accent-green); margin-bottom: 1rem; border-bottom: 2px solid var(--light-gray); padding-bottom: 0.5rem;">Herramientas Utilizadas</h3>
                        <div style="display: flex; flex-wrap: wrap; gap: 0.5rem; margin-bottom: 2rem;">
                            ${project.tools.map(tool => 
                                `<span style="padding: 0.5rem 1rem; background: var(--light-bg); border: 1px solid var(--light-gray); border-radius: 15px; font-size: 0.9rem; color: var(--dark-text);">${tool}</span>`
                            ).join('')}
                            <span style="padding: 0.5rem 1rem; background: var(--primary-blue); border: 1px solid var(--primary-blue); border-radius: 15px; font-size: 0.9rem; color: white; font-weight: 600;">${project.type.toUpperCase()}</span>
                        </div>
                        
                        <button id="closeModalBtn2" style="width: 100%; padding: 1rem; background: var(--primary-blue); color: white; border: none; border-radius: 10px; cursor: pointer; font-weight: 600; font-size: 1rem;">
                            Cerrar Detalles
                        </button>
                    </div>
                `;
                
                document.body.appendChild(modal);
                
                // A√±adir event listeners para cerrar el modal
                const closeModalBtn = document.getElementById('closeModalBtn');
                const closeModalBtn2 = document.getElementById('closeModalBtn2');
                
                if (closeModalBtn) {
                    closeModalBtn.addEventListener('click', () => {
                        document.body.removeChild(modal);
                    });
                }
                
                if (closeModalBtn2) {
                    closeModalBtn2.addEventListener('click', () => {
                        document.body.removeChild(modal);
                    });
                }
                
                // Cerrar modal al hacer clic fuera del contenido
                modal.addEventListener('click', (e) => {
                    if (e.target === modal) {
                        document.body.removeChild(modal);
                    }
                });
                
            } catch (error) {
                console.error('Error en viewProjectDetails:', error);
            }
        }
    </script>
</body>
</html>
